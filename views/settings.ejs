<%- include('./partials/head.ejs') %>

    <main class="container mt-3 mb-3 ml-auto mr-auto py-2 d-flex justify-content-space-between d-grid" id="settings">
        <aside id="settings-aside">
            <div class="aside-link contrast-primary lighten" data-target="account">Account</div>
            <div class="aside-link contrast-primary lighten" data-target="preferences">Preferences</div>
        </aside>

        <section id="account" class="ml-3">
            <h2 class="text-secondary">Account Details</h2>

            <form>
                <div class="form-field">
                    <label for="username" class="text-secondary">Username</label>
                    <input class="text-secondary" type="text" name="username" id="username" value="<%= user.username %>" disabled>
                </div>

                <div class="form-field">
                    <label for="email" class="text-secondary">Email</label>
                    <input class="text-secondary" type="text" name="email" id="email" value="<%= user.email %>" disabled>
                </div>
            </form>
            
            <div class="my-2">
                <h2 class="text-secondary">Account Options</h2>

                <form id="notification-form">
                    <div class="form-field checkbox">
                        <input type="checkbox" name="mailNotification" id="mail-notification" <%= user.wantsEmailNotifications ? 'checked' : '' %>>
                        <label for="mail-notification" class="text-secondary">I want to receive e-mail notifications.</label>
                    </div>
    
                    <div class="form-field checkbox">
                        <input type="checkbox" name="pushNotification" id="push-notification">
                        <label for="push-notification" class="text-secondary" <%= user.wantsPushNotifications ? 'checked' : '' %>>I want to receive push notifications.</label>
                    </div>
                </form>

                <form action="/user/delete" method="POST">
                    <button type="submit" class="btn-primary-transparent">Delete Account</button>
                </form>
            </div>
        </section>

        <section id="preferences" class="d-none ml-3">
            <h1 class="text-secondary">Preferences</h1>

            <form id="preference-form">
                <div class="form-field">
                    <label class="text-secondary" for="theme-select">Theme:</label>
                    <select id="theme-select">
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                    </select>
                </div>
            </form>
        </section>
    </main>

<%- include('./partials/footer.ejs') %>