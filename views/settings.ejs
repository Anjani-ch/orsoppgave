<%- include('./partials/head.ejs') %>

    <main class="container mt-3 mb-3 ml-auto mr-auto py-2 d-flex justify-content-space-between d-grid" id="settings">
        <aside id="settings-aside">
            <div class="aside-link" data-target="account">Account</div>
            <div class="aside-link" data-target="preferences">Preferences</div>
        </aside>

        <section id="account" class="ml-3">
            <h2>Account Details</h2>

            <form action="/user/update" method="POST" id="settings-form">
                <div class="form-field">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" value="<%= user.username %>" disabled>
                </div>

                <div class="form-field">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" value="<%= user.email %>" disabled>
                </div>
            </form>
            
            <div class="my-2">
                <h2>Account Options</h2>

                <form action="/user/delete" method="POST">
                    <button type="submit" class="btn-primary-transparent">Delete Account</button>
                </form>
            </div>
        </section>

        <section id="preferences" class="d-none ml-3">
            <h1>Preferences</h1>

            <form id="preference-form">
                <div class="form-field">
                    <label for="theme-select">Theme:</label>
                    <select id="theme-select">
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                    </select>
                </div>
            </form>
        </section>
    </main>

<%- include('./partials/footer.ejs') %>