<%- include('./partials/head.ejs') %>

    <main class="container ml-auto mr-auto py-2" id="login">
        <div class="form-container bg-primary">
            <h1 class="form-heading text-primary">Login</h1>

            <%- include('./partials/alert.ejs') %>

            <form action="/user/login" method="POST" id="login-form">
                <div class="form-field">
                    <label for="email" class="text-primary">Email</label>
                    <input type="text" name="email" id="email">
                </div>

                <div class="form-field">
                    <label for="password" class="text-primary">Password</label>
                    <input type="password" name="password" id="password">
                </div>

                <button type="submit" class="form-btn contrast-primary lighten">Login</button>

                <p class="text-center mt-1 text-primary">Don't have an account? <a href="/signup">Signup Here</a></p>
            </form>
        </div>
    </main>

<%- include('./partials/footer.ejs') %>